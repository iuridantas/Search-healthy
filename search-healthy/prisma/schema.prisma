// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator erd {
  provider = "prisma-erd-generator"
  output   = "../db.png"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @unique
  name              String
  email             String   @unique
  password          String
  cpf               String   @unique
  role              String
  createdAt         DateTime @default(now())
  updatesAt         DateTime @updatedAt
  ProfileStudent    Profile[]
}

model Training {
  id             String   @id @unique
  profileId      String
  Profile        Profile  @relation(fields: [profileId], references: [id])
  day            String
  exercises      String[]
  repetition     String
  aerobic        String
  stretching     String
  muscularegroup String
}

model Profile {
  id           String     @id @unique
  personal     User     @relation(fields:[personalId], references: [id]) 
  personalId   String   
  name         String
  image        String
  objective    String
  gym          String
  Training     Training[]
}
